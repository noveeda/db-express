extend user_layout 

block content
  .box
    .container
      .login-box
        .title 로그인
        form(action="/user/signin", method="post") 
          .input-box
            input.input-field(type="text" id="username" name="username" placeholder="아이디를 입력해주세요.")
          .input-box
            input.input-field(type="password" id="password" name="password" placeholder="비밀번호를 입력해주세요.")
          .button-box
            button.login-btn 로그인
        .signup-box
          a.signup-link(href="signup") 회원가입